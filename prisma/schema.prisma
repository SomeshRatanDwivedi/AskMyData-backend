generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  userId      Int      @id @default(autoincrement())
  email       String   @unique
  firstName   String
  lastName    String
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  files       UserFiles[]
  chatHistories ChatHistory[]
}

model UserFiles {
  id           String   @id @default(uuid())
  originalName String
  filePath     String
  mimeType     String
  size         Int

  userId       Int
  user         User       @relation(fields: [userId], references: [userId])
  createdAt    DateTime   @default(now())

  // For RAG
  status       String    @default("PENDING") // PENDING, EMBEDDED, FAILED
  qDrantIds    Json?     // qDrant chunk IDs returned after upsert
}

model ChatHistory {
  id           String     @id @default(uuid())
  question     String
  answer       String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now())

  userId       Int
  user         User       @relation(fields: [userId], references: [userId])
}

